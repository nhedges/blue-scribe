{erl_opts, [debug_info]}.
{deps, []}.

{pre_hooks,
  [{"(linux|darwin|solaris)", compile, "make -C c_src/blue_scribe_plan_image"},
   {"(freebsd)", compile, "gmake -C c_src/blue_scribe_plan_image"}]}.
{post_hooks,
  [{"(linux|darwin|solaris)", clean, "make -C c_src/blue_scribe_plan_image clean"},
   {"(freebsd)", clean, "gmake -C c_src/blue_scribe_plan_image clean"}]}.

{shell, [
  % {config, "config/sys.config"},
    {apps, [blue_scribe_plan]}
]}.
